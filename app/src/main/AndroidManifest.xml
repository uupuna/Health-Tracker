<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.healthtrackerapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthTrackerApp">
        <activity
            android:name=".ExerciseTracker.DailyExercisePage"
            android:exported="false" />
        <activity
            android:name=".FoodTracker.FoodLoggingActivity"
            android:exported="true" />
        <activity
            android:name=".ExerciseTracker.MonthlyExercisePage"
            android:exported="false" />
        <activity
            android:name=".UserInfo.InitialSetupPage"
            android:exported="true" />
        <activity
            android:name=".FoodTracker.MonthlyFoodPage"
            android:exported="true" />
        <activity
            android:name=".FoodTracker.DailyFoodPage"
            android:exported="true" />
        <activity
            android:name=".analytics.AnalyticsPage"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>